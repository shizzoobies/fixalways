---
import "../styles/global.css";

const {
  title = "FixAlways",
  description = "Find trusted home service pros.",
  badge = "Florida • HVAC (beta)",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <div class="container">
      <header class="topbar">
        <a href="/" class="brandBlock" aria-label="FixAlways home">
          <img
            class="brandLogoImg"
            src="/assets/logos/logo-horizontal.svg"
            alt="FixAlways"
            loading="eager"
          />
          <span class="brandTagline">Fast local directories that stay updated</span>
        </a>

        <div class="topbarRight">
          <div class="topSearch" role="search">
            <img class="topSearchIcon" src="/assets/icons/search.svg" alt="" aria-hidden="true" />
            <input
              id="topSearch"
              type="search"
              placeholder="Search city…"
              autocomplete="off"
            />
          </div>

          <div class="badge">{badge}</div>
        </div>
      </header>

      <main>
        <slot />
      </main>

      <footer class="footer">
        Built with real listings. Updates roll in over time.
      </footer>
    </div>

    <!-- ✅ Reliable JS (not inline) -->
    <script src="/js/top-search.js" defer></script>
  </body>
</html>
